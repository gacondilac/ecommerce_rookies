@model IEnumerable<CustomerSite.Models.Product>

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />

<link rel="stylesheet" href="~/css/cartStyle.css" asp-append-version="true" />

<section id="cart" class="section-p1">
    <table width="100%">
        <thead>
            <tr>
                <td>Remove</td>
                <td>Image</td>
                <td>Product</td>
                <td>Price</td>
                <td>Quantity</td>
                <td>Subtotal</td>
            </tr>
        </thead>
            <tbody>
                  @if (Model !=null)
                {
                    @foreach (var n in Model)
                    {
                    @if (n.CategoryID == 1)
                    {
                        
                        <tr>
                            <td>
                                @{
                                    var path = "../img/products/" + n.Image + ".jpg";
                                }
                                <a href=""><i class="far fa-times-circle"></i></a>
                            </td>
                            <td><img src=@path alt="" /></td>
                            <td>$@Html.DisplayFor(modelItem=>n.Name)</td>
                            <td>$@Html.DisplayFor(modelItem=>n.Price)</td>
                            <td><input type="number" value="1" min="0" /></td>

                            <td>$@Html.DisplayFor(modelItem=>n.Price)</td>
                        </tr>
                    }
                }
                }
                </tbody>
                
    </table>
</section>

@*subtotal*@
<section id="cart-add" class="section-p1">
    <div id="subtotal">
        <h3>Cart Totals</h3>
        <table>
            <tr>
                <td>Cart Subtotal</td>
                <td>$ 335</td>
            </tr>
            <tr>
                <td><strong>Total</strong></td>
                <td><strong>$ 335</strong></td>
            </tr>
        </table>
        <button class="normal">Proceed to checkout</button>
    </div>
</section>