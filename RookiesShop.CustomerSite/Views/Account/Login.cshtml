@model RookiesShop.Dto.SignInDto
@{

}
<!--/login -->
<div class="container-fluid col-md-6 mb-5 py-5 justify-content-center">
    <h5 class="font-weight-bold text-dark mb-4 text-center">Login</h5>
    <div class="text-center icon">
        <span class="fa fa-unlock-alt"></span>
    </div>
    <form asp-controller="Account" asp-action="SignIn" method="post">
        <div class="form-group">
            <input asp-for="Email"  type="text" class="form-control border-1 py-4" placeholder="Email Address" required="required" />
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control border-1 py-4" placeholder="Password"
                   required="required" />
        </div>
        <div>
            <button class="btn btn-primary btn-block border-0 py-3" type="submit">Login</button>
        </div>
    </form>
        <div class="row px-xl-5 pt-5">
            <div class="col-lg-12 col-md-12">
            
                 <div class="row">

                    <ul class="col-md-6 mb-2">
                        <li class="switch-slide">
                            <label class="switch">
                             <input type="checkbox">
                                 <span class="slider round text-right"></span>
                                  Keep Logged in
                            </label>
                        </li>   
                        <li>
                             <a href="#" class="text-right">Forgot password?</a>
                        </li>

                     </ul>
                    <ul class="col-md-6 mb-2">
                        <li class="">
                            <a asp-controller="Account" asp-action="Register" class="">Don't have an Account?</a>
                        </li>
                        <li>
                            <a href="#" class="text-right">Need Help?</a>
                        </li>

                    </ul>
                 </div>
              
             </div>
        </div>
   
</div>

<!-- /login -->