@model RookiesShop.Dto.RegisterDto
@{

}
<!--/login -->
<div class="container-fluid col-md-6 mb-5 py-5 justify-content-center">
    <h5 class="font-weight-bold text-dark mb-4 text-center">Register</h5>
    <div class="text-center icon">
        <span class="fa fa-user-circle"></span>
    </div>
    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="form-group">
            <input type="text" class="form-control border-1 py-4" placeholder="First Name"
                   required="required" asp-for="FirstName" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control border-1 py-4" placeholder="Last Name"
                   required="required" asp-for="LastName" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control border-1 py-4" placeholder="Phone Number"
                   required="required" asp-for="PhoneNumber" />
        </div>
        <div class="form-group">
            <input type="email" class="form-control border-1 py-4" placeholder="Email Address"
                   required="required"  asp-for="Email"/>
        </div>
        
        <div class="form-group">
            <input type="password" class="form-control border-1 py-4" placeholder="Password"
                   required="required" asp-for="Password" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control border-1 py-4" placeholder="Confirm Password"
                   required="required" asp-for="ConfirmPassword"/>
        </div>
        <div>
            <button class="btn btn-primary btn-block border-0 py-3" type="submit">Sign Up</button>
        </div>
        <div class="row px-xl-5 pt-5">
           
        </div>
    </form>
</div>