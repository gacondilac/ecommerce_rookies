@using System.IdentityModel.Tokens.Jwt
@using System.Security.Claims
@{
    var token = Context.Request.Cookies["jwtToken"];
    var email = "";
    if (token!=null)
    {
        var tokenHandler = new JwtSecurityTokenHandler();
        var userInfo = tokenHandler.ReadJwtToken(token);
        email = userInfo.Claims.FirstOrDefault(o => o.Type == ClaimTypes.Email)?.Value;
    }
}

<div class="container-fluid mb-2">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 d-none d-lg-block"></div>
        <div class="col-lg-12">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold">
                        <span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper
                    </h1>
                </a>
                <button type="button"
                        class="navbar-toggler"
                        data-toggle="collapse"
                        data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between"
                     id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a href="/Home" class="nav-item nav-link active">Home</a>

                        <div class="nav-item dropdown">
                            <a 
                               class="nav-link dropdown-toggle"
                               href="#"
                               data-bs-toggle="dropdown">Category</a>
                            <div class="dropdown-menu rounded-0 m-0 ">
                                
                                <a href="/Home/?Category=1" class="nav-item nav-link dropdown-item">Shirts</a>
                                <a href="" class="nav-item nav-link dropdown-item">Jeans</a>
                                <a href="" class="nav-item nav-link dropdown-item">Sportswear</a>
                                <a href="" class="nav-item nav-link dropdown-item">Blazers</a>
                                <a href="/?Category=2" class="nav-item nav-link dropdown-item">Jackets</a>
                            </div>
                        </div>
                    </div>
                    @if(email!=""){
                        <h1>@email</h1>
                    }else{

                    <div class="navbar-nav ml-auto py-0">
                        <a  asp-controller="Account" asp-action="Login" class="nav-item nav-link">Login</a>
                        <a asp-controller ="Account" asp-action="Register" class="nav-item nav-link">Register</a>
                    </div>
                    }
                </div>
            </nav> 
        </div>
    </div>
</div>